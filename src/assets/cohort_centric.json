{
  "aliases": {
    "cohort_centric": {}
  },
  "settings": {
    "index.number_of_shards": 3,
    "index.max_result_window": 300000,
    "analysis": {
      "analyzer": {
        "autocomplete_analyzed": {
          "filter": ["lowercase", "edge_ngram"],
          "tokenizer": "standard"
        },
        "autocomplete_prefix": {
          "filter": ["lowercase", "edge_ngram"],
          "tokenizer": "keyword"
        },
        "lowercase_keyword": {
          "filter": ["lowercase"],
          "tokenizer": "keyword"
        }
      },
      "filter": {
        "edge_ngram": {
          "max_gram": 20,
          "min_gram": 20,
          "side": "front",
          "type": "edge_ngram"
        }
      }
    }
  },
  "mappings": {
    "dynamic": false,
    "date_detection": false,
    "properties": {
      "cohort_autocomplete": {
        "fields": {
          "analyzed": {
            "analyzer": "autocomplete_prefix",
            "search_analyzer": "lowercase_keyword",
            "type": "text"
          },
          "lowercase": {
            "analyzer": "autocomplete_prefix",
            "type": "text"
          },
          "prefix": {
            "analyzer": "autocomplete_prefix",
            "search_analyzer": "lowercase_keyword",
            "type": "text"
          }
        },
        "type": "keyword"
      },
      "cohort_name": {
        "type": "keyword",
        "copy_to": ["cohort_autocomplete"]
      },
      "available_data_types": {
        "properties": {
          "biospecimens": { "type": "keyword" },
          "genomic_data": { "type": "keyword" },
          "genomic_data_wgs": { "type": "keyword" },
          "genomic_data_wes": { "type": "keyword" },
          "genomic_data_array": { "type": "keyword" },
          "genomic_data_other": { "type": "keyword" },
          "demographic_data": { "type": "boolean" },
          "imaging_data": { "type": "keyword" },
          "participants_address_or_geocode_data": { "type": "keyword" },
          "electronic_health_record_data": { "type": "keyword" },
          "phenotypic_clinical_data": { "type": "keyword" }
        }
      },
      "basic_cohort_attributes": {
        "type": "keyword"
      },
      "biosample": {
        "properties": {
          "sample_types": {
            "type": "keyword"
          },
          "biosample_variables": {
            "type": "keyword"
          }
        }
      },
      "cohort_ancestry": {
        "properties": {
          "asian": { "type": "keyword" },
          "black_african_american_or_african": { "type": "keyword" },
          "european_or_white": { "type": "keyword" },
          "hispanic_latino_or_spanish": { "type": "keyword" },
          "middle_eastern_or_north_african": { "type": "keyword" },
          "other": { "type": "boolean" }
        }
      },
      "countries": {
        "type": "keyword",
        "copy_to": ["cohort_autocomplete"]
      },
      "current_enrollment": {
        "type": "integer"
      },
      "dictionary_harmonized": {
        "type": "boolean"
      },
      "irb_approved_data_sharing": {
        "type": "keyword"
      },
      "laboratory_measures": {
        "properties": {
          "genomic_variables": {
            "type": "keyword"
          },
          "microbiology": {
            "type": "keyword"
          }
        }
      },
      "pi_lead": {
        "type": "keyword",
        "copy_to": ["cohort_autocomplete"]
      },
      "questionnaire_survey_data": {
        "properties": {
          "lifestyle_and_behaviours": {
            "type": "keyword"
          },
          "physiological_measurements": {
            "type": "keyword"
          },
          "socio_demographic_and_economic_characteristics": {
            "type": "keyword"
          },
          "diseases": {
            "type": "keyword"
          },
          "medication": {
            "type": "keyword"
          },
          "non_pharmacological_interventions": {
            "type": "keyword"
          },
          "healthcare_information": {
            "type": "keyword"
          }
        }
      },
      "target_enrollment": {
        "type": "integer"
      },
      "type_of_cohort": {
        "properties": {
          "case_control": { "type": "boolean" },
          "cross_sectional": { "type": "boolean" },
          "longitudinal": { "type": "boolean" },
          "health_records": { "type": "boolean" },
          "other": { "type": "boolean" }
        }
      },
      "website": {
        "type": "keyword"
      }
    }
  }
}
